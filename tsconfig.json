{
    "compilerOptions":{
        "outDir": "./dist",
        "strictNullChecks": false,
        "module": "commonjs",
        "target": "es2019",
        "esModuleInterop": true,
        "allowJs": true,
        "skipLibCheck": true,
        "types": ["jest", "node"],
        "typeRoots": ["./node_modules/@types"]
    },
    "include": [
        "src/**/*",
        "jest.config.js",
        "jest-unit-config.js",
        "jest-integration-config.js",
        "jest-mongodb-config.js"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}