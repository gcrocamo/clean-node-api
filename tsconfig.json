{
    "compilerOptions":{
        "outDir": "./dist",
        "strictNullChecks": true,
        "module": "commonjs",
        "target": "es2019",
        "esModuleInterop": true,
        "allowJs": true,
        "skipLibCheck": true,
        "types": ["jest", "node"],
        "typeRoots": ["./node_modules/@types"]
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}